<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmallChange" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/biru</item>
        <item name="colorPrimaryVariant">@color/biru</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TabLayout Custom Style. -->
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="tab_text_low" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--Button Text Style-->
    <style name="button_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="popupMenuStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/biru</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:popupBackground">@drawable/rounded_box</item>
    </style>
</resources>